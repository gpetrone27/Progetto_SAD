                                             <tabs>
                                                <Tab closable="false" text="1">
                                                   <content>
                                                      <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="5.0">
                                                         <children>
                                                            <ToggleButton mnemonicParsing="false" onAction="#selectFillColor" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: black;" styleClass="colorButton" textAlignment="CENTER" HBox.hgrow="NEVER">
