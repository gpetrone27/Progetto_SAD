                                                            <ToggleButton mnemonicParsing="false" onAction="#selectBorderColor" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: purple;" styleClass="colorButton" textAlignment="CENTER" toggleGroup="$borderColor" />
                                                         </children>
                                                      </HBox>
                                                   </content>
                                                </Tab>
                                                <Tab closable="false" text="2">
                                                   <content>
                                                      <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="5.0" />
                                                   </content>
                                                </Tab>
                                             </tabs>
                                          </TabPane>
                                       </children>
                                    </VBox>
                                    <VBox>
                                       <children>
                                          <Label text="Fill" />
