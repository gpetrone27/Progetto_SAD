<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sadprojectwork.PaintController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <ScrollPane focusTraversable="false" BorderPane.alignment="CENTER">
               <content>
                  <Canvas fx:id="canvas" height="5000.0" width="5000.0" />
               </content>
            </ScrollPane>
         </center>
         <top>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <MenuBar>
                    <menus>
                      <Menu mnemonicParsing="false" text="File">
                        <items>
                          <MenuItem mnemonicParsing="false" onAction="#newDrawing" text="New" />
                              <MenuItem mnemonicParsing="false" onAction="#saveDrawing" text="Save" />
                              <MenuItem mnemonicParsing="false" onAction="#loadDrawing" text="Load" />
                        </items>
                      </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                           <items>
                              <MenuItem mnemonicParsing="false" onAction="#undoOperation" text="Undo" />
                              <MenuItem mnemonicParsing="false" onAction="#redoOperation" text="Redo" />
                           </items>
                        </Menu>
                    </menus>
                  </MenuBar>
                  <HBox alignment="BOTTOM_LEFT" VBox.vgrow="ALWAYS">
                     <children>
                        <VBox alignment="BOTTOM_CENTER" spacing="5.0">
                           <children>
                              <ScrollPane focusTraversable="false" VBox.vgrow="ALWAYS">
                                 <content>
                                    <GridPane alignment="CENTER">
                                      <columnConstraints>
                                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" prefWidth="100.0" />
                                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" prefWidth="100.0" />
                                      </columnConstraints>
                                      <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                      </rowConstraints>
                                       <children>
                                          <ToggleButton mnemonicParsing="false" onAction="#selectShapeEllipsis" prefWidth="100.0" text="Ellipsis" textAlignment="CENTER" GridPane.columnIndex="1">
                                             <toggleGroup>
                                                <ToggleGroup fx:id="shapes" />
                                             </toggleGroup>
                                          </ToggleButton>
                                          <ToggleButton mnemonicParsing="false" onAction="#selectShapeRectangle" prefHeight="25.0" prefWidth="105.0" text="Rectangle" textAlignment="CENTER" toggleGroup="$shapes" />
                                          <ToggleButton mnemonicParsing="false" onAction="#selectShapeLine" prefHeight="30.0" prefWidth="101.0" text="Segment Line" GridPane.rowIndex="1" />
                                       </children>
                                    </GridPane>
                                 </content>
                              </ScrollPane>
                              <Label text="Shapes" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                        <VBox alignment="BOTTOM_CENTER">
                           <children>
                              <VBox>
                                 <children>
                                    <Label text="Border" />
                                    <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="3.0">
                                       <children>
                                          <ToggleButton mnemonicParsing="false" onAction="#selectBorderBlack" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: black;" textAlignment="CENTER" HBox.hgrow="NEVER">
                                             <toggleGroup>
                                                <ToggleGroup fx:id="borderColor" />
                                             </toggleGroup>
                                          </ToggleButton>
                                          <ToggleButton layoutX="10.0" layoutY="45.0" mnemonicParsing="false" onAction="#selectBorderWhite" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: white;" textAlignment="CENTER" toggleGroup="$borderColor" />
                                          <ToggleButton layoutX="64.0" layoutY="45.0" mnemonicParsing="false" onAction="#selectBorderRed" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: red;" textAlignment="CENTER" toggleGroup="$borderColor" />
                                          <ToggleButton layoutX="117.0" layoutY="45.0" mnemonicParsing="false" onAction="#selectBorderOrange" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: orange;" textAlignment="CENTER" toggleGroup="$borderColor" />
                                          <ToggleButton layoutX="171.0" layoutY="45.0" mnemonicParsing="false" onAction="#selectBorderYellow" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: yellow;" textAlignment="CENTER" toggleGroup="$borderColor" />
                                          <ToggleButton layoutX="224.0" layoutY="45.0" mnemonicParsing="false" onAction="#selectBorderGreen" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: green;" textAlignment="CENTER" toggleGroup="$borderColor" />
                                          <ToggleButton layoutX="278.0" layoutY="45.0" mnemonicParsing="false" onAction="#selectBorderBlue" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: blue;" textAlignment="CENTER" toggleGroup="$borderColor" />
                                          <ToggleButton layoutX="332.0" layoutY="45.0" mnemonicParsing="false" onAction="#selectBorderPurple" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: purple;" textAlignment="CENTER" toggleGroup="$borderColor" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              <VBox>
                                 <children>
                                    <Label text="Fill" />
                                    <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="3.0">
                                       <children>
                                          <ToggleButton mnemonicParsing="false" onAction="#selectFillBlack" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: black;" textAlignment="CENTER" HBox.hgrow="NEVER">
                                             <toggleGroup>
                                                <ToggleGroup fx:id="fillColor" />
                                             </toggleGroup>
                                          </ToggleButton>
                                          <ToggleButton layoutX="10.0" layoutY="45.0" mnemonicParsing="false" onAction="#selectFillWhite" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: white;" textAlignment="CENTER" toggleGroup="$fillColor" />
                                          <ToggleButton layoutX="64.0" layoutY="45.0" mnemonicParsing="false" onAction="#selectFillRed" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: red;" textAlignment="CENTER" toggleGroup="$fillColor" />
                                          <ToggleButton layoutX="117.0" layoutY="45.0" mnemonicParsing="false" onAction="#selectFillOrange" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: orange;" textAlignment="CENTER" toggleGroup="$fillColor" />
                                          <ToggleButton layoutX="171.0" layoutY="45.0" mnemonicParsing="false" onAction="#selectFillYellow" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: yellow;" textAlignment="CENTER" toggleGroup="$fillColor" />
                                          <ToggleButton layoutX="224.0" layoutY="45.0" mnemonicParsing="false" onAction="#selectFillGreen" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: green;" textAlignment="CENTER" toggleGroup="$fillColor" />
                                          <ToggleButton layoutX="278.0" layoutY="45.0" mnemonicParsing="false" onAction="#selectFillBlue" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: blue;" textAlignment="CENTER" toggleGroup="$fillColor" />
                                          <ToggleButton layoutX="332.0" layoutY="45.0" mnemonicParsing="false" onAction="#selectFillPurple" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: purple;" textAlignment="CENTER" toggleGroup="$fillColor" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              <Label text="Colors" />
                           </children>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
