                           </accelerator></MenuItem>
                        <MenuItem disable="true" mnemonicParsing="false" onAction="#pasteShape" text="Paste">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="V" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator></MenuItem>
                      <MenuItem disable="true" mnemonicParsing="false" onAction="#deleteShape" text="Delete" />
                        <MenuItem disable="true" mnemonicParsing="false" onAction="#showResizeWindow" text="Resize" />
